<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alex.shiro.mapper.UserMapper">
    
    <resultMap id="userMap" type="com.alex.shiro.model.User">
        <id column="uid" property="uid" javaType="java.lang.Integer"/>
        <result column="username" property="username" javaType="java.lang.String"/>
        <result column="password" property="password" javaType="java.lang.String"/>
        <collection property="roles" ofType="com.alex.shiro.model.Role" javaType="com.alex.shiro.model.Role">
            <id column="rid" property="rid" javaType="java.lang.Integer"/>
            <result column="rname" property="rname" javaType="java.lang.String"/>
            <collection property="permissions" ofType="com.alex.shiro.model.Permission" javaType="com.alex.shiro.model.Permission">
                <id column="pid" property="pid" javaType="java.lang.Integer"/>
                <result column="pname" property="pname" javaType="java.lang.String"/>
                <result column="url" property="url" javaType="java.lang.String"/>
            </collection>
        </collection>
    </resultMap>

    <select id="findByUserName" parameterType="java.lang.String" resultMap="userMap">
        SELECT u.*, r.*, p.*
        FROM user u
            INNER JOIN user_role ur ON ur.uid = u.uid
            INNER JOIN role r ON r.rid = ur.rid
            INNER JOIN permission_role pr ON pr.rid = r.rid
            INNER JOIN permission p ON pr.pid = p.pid
        WHERE u.username = #{username}
    </select>

</mapper>